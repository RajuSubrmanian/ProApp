<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.inspirenetz.app.proapp.CustomerHomeActivity"
    android:background="@drawable/charge_card_view">

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome"
        android:textColor="@color/color_white"
        android:layout_centerInParent="true"/>-->

    <android.support.design.widget.TabLayout
        android:id="@+id/customerHomePageTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:tabIndicatorHeight="3dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:fillViewport="false"
        style="@style/AppTheme.TabStyle"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/customerHomePageTab"
        android:layout_marginTop="5dp"
        android:id="@+id/horizontalLine"
        android:visibility="gone"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/customerHomePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/horizontalLine"
        />

</RelativeLayout>
