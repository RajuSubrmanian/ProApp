<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.inspirenetz.app.proapp.CustomerHomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layHomeContent"></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="20dp"
        android:paddingRight="5dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:id="@+id/layAppTitleBar"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_menu_white"
            android:id="@+id/titleBarIcon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/titleBarTitle"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:text="CUSTOMER"
            android:textColor="@color/app_title_bar_text_color"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textSize="@dimen/app_title_bar_title_text_size" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@drawable/logo_inspirenetz"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:id="@+id/titleBarLogo"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_search"
            android:id="@+id/imgSearchIcon"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_shopping_bag"
            android:id="@+id/imgShoppingIcon"
            android:layout_toStartOf="@+id/imgSearchIcon"
            android:layout_marginStart="10dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/layAppTitleBar"
        android:layout_marginTop="5dp"
        android:id="@+id/horizontalLine"
        android:visibility="gone"/>

    <!--<android.support.design.widget.TabLayout
        android:id="@+id/customerHomePageTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:fillViewport="false"
        android:layout_below="@id/horizontalLine"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/customerHomePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customerHomePageTab"
        />-->

</RelativeLayout>
